<?xml version="1.0" encoding="UTF-8"?>

<?import de.prob2.ui.layout.FontSize?>
<?import de.prob2.ui.animation.tracereplay.TraceTestView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Scene?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<fx:root type="TraceTestView" title="%animation.tracereplay.test.stage.title" minWidth="400" minHeight="300" width="800.0" height="500.0" xmlns:fx="http://javafx.com/fxml/1">
	<fx:define>
		<FontSize fx:id="fontSize"/>
	</fx:define>
	<scene>
		<Scene stylesheets="@/prob.css">
			<ScrollPane fitToHeight="true" fitToWidth="true">
				<VBox spacing="5.0">
					<TableView fx:id="traceTableView" VBox.vgrow="ALWAYS">
						<columnResizePolicy>
							<TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
						</columnResizePolicy>
						<columns>
							<TableColumn fx:id="transitionColumn" text="%animation.tracereplay.test.view.columns.transition" sortable="false"/>
							<TableColumn fx:id="testColumn" text="%animation.tracereplay.test.view.columns.test" sortable="false"/>
							<TableColumn fx:id="descriptionColumn" text="%animation.tracereplay.test.view.columns.description" sortable="false"/>
						</columns>
						<placeholder>
							<Label text="Trace is Empty"/>
						</placeholder>
					</TableView>
					<HBox>
						<Button fx:id="btApply" text="%common.buttons.apply" styleClass="button-blue" onAction="#applyTest"/>
					</HBox>
				</VBox>
			</ScrollPane>
		</Scene>
	</scene>
</fx:root>

