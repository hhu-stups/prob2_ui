<?xml version="1.0" encoding="UTF-8"?>

<?import de.prob2.ui.helpsystem.HelpButton?>
<?import de.prob2.ui.layout.BindableGlyph?>
<?import de.prob2.ui.layout.FontSize?>
<?import de.prob2.ui.sharedviews.InterruptIfRunningButton?>
<?import de.prob2.ui.sharedviews.SimpleStatsView?>
<?import de.prob2.ui.sharedviews.Spacer?>
<?import de.prob2.ui.verifications.modelchecking.ModelcheckingView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root type="ModelcheckingView" stylesheets="@/prob.css" xmlns:fx="http://javafx.com/fxml/1">
	<fx:define>
		<FontSize fx:id="fontSize" />
	</fx:define>
	<top>
		<ToolBar styleClass="border">
			<padding>
				<Insets left="5.0" right="5.0"/>
			</padding>
			<InterruptIfRunningButton>
				<graphic>
					<BindableGlyph styleClass="icon-dark" fontFamily="FontAwesome" icon="TIMES_CIRCLE_ALT"
								   bindableFontSize="${fontSize.fontSize * 2}"/>
				</graphic>
				<Button fx:id="checkMachineButton">
					<graphic>
						<BindableGlyph styleClass="icon-dark" fontFamily="FontAwesome" icon="CHECK_CIRCLE_ALT"
									   bindableFontSize="${fontSize.fontSize * 2}"/>
					</graphic>
					<tooltip>
						<Tooltip text="%common.checkMachine"/>
					</tooltip>
				</Button>
			</InterruptIfRunningButton>
			<Spacer/>
			<Button fx:id="addModelCheckButton" disable="true"
					contentDisplay="GRAPHIC_ONLY" onAction="#askToAddItem">
				<graphic>
					<BindableGlyph styleClass="icon-dark" fontFamily="FontAwesome" icon="PLUS_CIRCLE"
								   bindableFontSize="${fontSize.fontSize * 2}"/>
				</graphic>
				<tooltip>
					<Tooltip
							text="%verifications.modelchecking.modelcheckingView.tooltips.addModelCheck"/>
				</tooltip>
			</Button>
			<HelpButton fx:id="helpButton"/>
		</ToolBar>
	</top>
	<center>
		<VBox>
			<TableView fx:id="itemsTable" minHeight="85.0" prefWidth="240.0">
				<columnResizePolicy>
					<TableView fx:constant="CONSTRAINED_RESIZE_POLICY_FLEX_LAST_COLUMN"/>
				</columnResizePolicy>
				<columns>
					<TableColumn fx:id="shouldExecuteColumn" sortable="false" style="-fx-alignment: CENTER;"
								 minWidth="${fontSize.fontSize * 2}" maxWidth="${fontSize.fontSize * 2}"/>
					<TableColumn fx:id="statusColumn" style="-fx-alignment: CENTER;" minWidth="${fontSize.fontSize * 4}"
								 maxWidth="${fontSize.fontSize * 4}" text="%common.columns.status"/>
					<TableColumn fx:id="configurationColumn" text="%common.columns.configuration"/>
				</columns>
				<placeholder>
					<Label text="%verifications.modelchecking.modelcheckingView.noModelcheckingTasks"/>
				</placeholder>
			</TableView>
			<TableView fx:id="stepsTable" minHeight="60.0">
				<columnResizePolicy>
					<TableView fx:constant="CONSTRAINED_RESIZE_POLICY_FLEX_LAST_COLUMN"/>
				</columnResizePolicy>
				<columns>
					<TableColumn fx:id="stepStatusColumn" style="-fx-alignment: CENTER;"
								 minWidth="${fontSize.fontSize * 4}" maxWidth="${fontSize.fontSize * 4}"
								 text="%common.columns.status"/>
					<TableColumn fx:id="stepMessageColumn" minWidth="120.0" text="%common.columns.message"/>
				</columns>
				<placeholder>
					<Label text="%verifications.modelchecking.modelcheckingView.noModelcheckingSteps"/>
				</placeholder>
			</TableView>
			<HBox fx:id="executeButtonsBox" spacing="5" alignment="CENTER" visible="false">
				<padding>
					<Insets topRightBottomLeft="5"/>
				</padding>
				<Button fx:id="executeButton" text="%verifications.modelchecking.modelcheckingView.contextMenu.check"
						styleClass="button-blue" onAction="#executeSelected"/>
				<Button fx:id="continueCheckingButton"
						text="%verifications.modelchecking.modelcheckingView.contextMenu.searchForNewErrors"
						styleClass="button-blue" onAction="#continueCheckingSelected"/>
			</HBox>
			<VBox fx:id="statsBox" spacing="5.0" visible="false">
				<padding>
					<Insets topRightBottomLeft="10.0"/>
				</padding>
				<HBox prefHeight="12.0" spacing="7.0">
					<Label text="%verifications.modelchecking.modelcheckingStats.elapsedTime" styleClass="bold"/>
					<Label fx:id="elapsedTime"/>
				</HBox>
				<HBox prefHeight="65.0" spacing="7.0">
					<Label text="%verifications.modelchecking.modelcheckingView.progress" styleClass="bold"/>
					<ProgressBar fx:id="progressBar" prefHeight="50.0" HBox.hgrow="ALWAYS" progress="0.0"/>
				</HBox>
				<SimpleStatsView fx:id="simpleStatsView"/>
				<HBox fx:id="memoryContainer" spacing="7.0">
					<Label text="%verifications.modelchecking.modelcheckingStats.memoryUsage" styleClass="bold"/>
					<Label fx:id="memoryUsage"/>
				</HBox>
			</VBox>
		</VBox>
	</center>
</fx:root>
