<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>

<fx:root type="Menu" text="%menu.view" xmlns:fx="http://javafx.com/fxml/1">
	<MenuItem fx:id="viewMenu_default" text="%menu.view.items.zoomDefault"
		onAction="#handleDefaultFontSize" mnemonicParsing="false" />
	<MenuItem fx:id="viewMenu_bigger" text="%menu.view.items.zoomIn"
		onAction="#handleIncreaseFontSize" mnemonicParsing="false" />
	<MenuItem fx:id="viewMenu_smaller" text="%menu.view.items.zoomOut"
		onAction="#handleDecreaseFontSize" mnemonicParsing="false" />
	<SeparatorMenuItem />
	<MenuItem fx:id="fullScreenMenuItem" text="%menu.view.items.enterFullScreen"
		onAction="#handleFullScreen" accelerator="Shortcut+Ctrl+F" />
</fx:root>

