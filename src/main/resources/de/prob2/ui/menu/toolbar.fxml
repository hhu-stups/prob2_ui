<?xml version="1.0" encoding="UTF-8"?>

<?import de.prob2.ui.layout.BindableGlyph?>
<?import de.prob2.ui.layout.FontSize?>
<?import de.prob2.ui.sharedviews.Spacer?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<HBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.prob2.ui.menu.ToolBarController" stylesheets="@/prob.css"
	  alignment="CENTER_LEFT" maxHeight="${fontSize.fontSize}">
	<fx:define>
		<FontSize fx:id="fontSize"/>
	</fx:define>

	<Button fx:id="addProjectButton" onAction="#createNewProject" contentDisplay="GRAPHIC_ONLY">
		<graphic>
			<BindableGlyph styleClass="icon-dark" fontFamily="FontAwesome" icon="PLUS_CIRCLE"
						   bindableFontSize="${fontSize.fontSize * 2}"/>
		</graphic>
		<tooltip>
			<Tooltip text="%menu.file.items.newProject"/>
		</tooltip>
	</Button>

	<Button fx:id="openButton" onAction="#handleOpen" contentDisplay="GRAPHIC_ONLY">
		<graphic>
			<BindableGlyph styleClass="icon-dark" fontFamily="FontAwesome" icon="FOLDER_OPEN"
						   bindableFontSize="${fontSize.fontSize * 1.5}"/>
		</graphic>
		<tooltip>
			<Tooltip text="%menu.file.items.open"/>
		</tooltip>
	</Button>

	<Button fx:id="saveProjectButton" onAction="#saveProject">
		<graphic>
			<BindableGlyph styleClass="icon-dark" fontFamily="FontAwesome" icon="SAVE"
						   bindableFontSize="${fontSize.fontSize * 1.5}"/>
		</graphic>
		<tooltip>
			<Tooltip text="%menu.file.items.saveProject"/>
		</tooltip>
	</Button>
	<Spacer/>

	<fx:include fx:id="navBar" source="../sharedviews/navigation_buttons.fxml"/>

	<Spacer/>
	<Button fx:id="zoomOutButton" onAction="#zoomOut">
		<graphic>
			<BindableGlyph styleClass="icon-dark" fontFamily="FontAwesome" icon="SEARCH_MINUS"
						   bindableFontSize="${fontSize.fontSize * 2}"/>
		</graphic>
		<tooltip>
			<Tooltip text="%visb.menu.view.zoom.out"/>
		</tooltip>
	</Button>

	<Button fx:id="zoomIn" onAction="#zoomIn">
		<graphic>
			<BindableGlyph styleClass="icon-dark" fontFamily="FontAwesome" icon="SEARCH_PLUS"
						   bindableFontSize="${fontSize.fontSize * 2}"/>
		</graphic>
		<tooltip>
			<Tooltip text="%visb.menu.view.zoom.in"/>
		</tooltip>
	</Button>

	<Button fx:id="preferences" onAction="#handlePreferences">
		<graphic>
			<BindableGlyph styleClass="icon-dark" fontFamily="FontAwesome" icon="COG"
						   bindableFontSize="${fontSize.fontSize * 2}"/>
		</graphic>
		<tooltip>
			<Tooltip text="%menu.file.items.preferences"/>
		</tooltip>
	</Button>
</HBox>
