<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<fx:root type="Menu" text="%menu.window" xmlns:fx="http://javafx.com/fxml/1">
	<Menu text="%menu.window.items.perspectives">
		<MenuItem text="%menu.window.items.perspectives.preset.default"
			onAction="#handleLoadDefault" />
		<MenuItem text="%menu.window.items.perspectives.preset.separated"
			onAction="#handleLoadSeparated" />
		<MenuItem text="%menu.window.items.perspectives.preset.separated2"
			onAction="#handleLoadSeparated2" />
		<SeparatorMenuItem />
		<MenuItem text="%menu.window.items.perspectives.load"
			onAction="#handleLoadPerspective" />
	</Menu>
	<MenuItem text="%menu.window.items.detach" onAction="#handleLoadDetached" />
</fx:root>

