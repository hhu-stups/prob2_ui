<?xml version="1.0" encoding="UTF-8"?>

<?import de.prob2.ui.layout.FontSize?>
<?import de.prob2.ui.sharedviews.TraceSelectionView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<fx:root type="TraceSelectionView" stylesheets="@/prob.css" fitToHeight="true" fitToWidth="true" xmlns:fx="http://javafx.com/fxml/1">
	<fx:define>
		<FontSize fx:id="fontSize"/>
		<!-- Invisible dummy to make CheckingViewBase happy. -->
		<Button fx:id="checkMachineButton" visible="false"/>
	</fx:define>
	<SplitPane fx:id="splitPane" orientation="VERTICAL">
		<TableView fx:id="itemsTable" VBox.vgrow="ALWAYS">
			<columnResizePolicy>
				<TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
			</columnResizePolicy>
			<columns>
				<!-- FIXME Is shouldExecuteColumn meant to be missing/hidden here (unlike in the main TraceReplayView)? -->
				<TableColumn fx:id="shouldExecuteColumn" visible="false" sortable="false" style="-fx-alignment: CENTER;"
					minWidth="${fontSize.fontSize * 2}" maxWidth="${fontSize.fontSize * 2}"/>
				<!--
					statusColumn is an invisible dummy to make CheckingViewBase happy.
					TraceSelectionView uses statusProgressColumn instead,
					which can also contain a progress bar.
				-->
				<TableColumn fx:id="statusColumn" visible="false"/>
				<TableColumn fx:id="statusProgressColumn" style="-fx-alignment: CENTER;" minWidth="${fontSize.fontSize * 6}"
							 maxWidth="${fontSize.fontSize * 6}" text="%animation.tracereplay.view.columns.status"/>
				<TableColumn fx:id="configurationColumn" text="%animation.tracereplay.view.columns.name"/>
			</columns>
			<placeholder>
				<Label text="%animation.tracereplay.view.placeholder"/>
			</placeholder>
		</TableView>
	</SplitPane>
</fx:root>

