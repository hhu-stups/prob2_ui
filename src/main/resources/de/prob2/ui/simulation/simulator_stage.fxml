<?xml version="1.0" encoding="UTF-8"?>


<?import de.prob2.ui.layout.BindableGlyph?>
<?import de.prob2.ui.layout.FontSize?>
<?import de.prob2.ui.simulation.SimulatorStage?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.TableView?>

<?import javafx.scene.control.ScrollPane?>

<?import javafx.scene.layout.AnchorPane?>
<fx:root title="Simulator" type="SimulatorStage" width="700" height="300" minHeight="300" minWidth="700" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
	<fx:define>
		<FontSize fx:id="fontSize" />
	</fx:define>
	<scene>
        <Scene stylesheets="@/prob.css">
			<ScrollPane prefWidth="700" prefHeight="300" fitToHeight="true" fitToWidth="true">
				<AnchorPane>
					<VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
						<HBox styleClass="border" alignment="CENTER_LEFT" VBox.vgrow="NEVER">
							<padding>
								<Insets left="5.0"/>
							</padding>
							<Button fx:id="loadConfigurationButton" onAction="#loadConfiguration">
								<graphic>
									<BindableGlyph styleClass="icon-dark" fontFamily="FontAwesome" icon="FOLDER_OPEN" bindableFontSize="${fontSize.fontSize + 2}" />
								</graphic>
								<tooltip>
									<Tooltip text="%simulation.file.open" />
								</tooltip>
							</Button>
							<Button fx:id="btSimulate" styleClass="button-blue" text="Start" onAction="#simulate"/>
						</HBox>
						<TableView VBox.vgrow="ALWAYS">
							<columnResizePolicy>
								<TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
							</columnResizePolicy>
						</TableView>
					</VBox>
				</AnchorPane>
			</ScrollPane>
		</Scene>
    </scene>
</fx:root>
