<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import de.prob2.ui.tracediff.TraceDiff?>

<fx:root type="TraceDiff" xmlns:fx="http://javafx.com/fxml/1" prefWidth="600" stylesheets="@/prob.css" spacing="5">
	<children>
		<HBox spacing="5">
			<Label fx:id="replayed" HBox.hgrow="ALWAYS" maxWidth="Infinity" text="%animation.tracereplay.alerts.traceReplayError.error.traceDiff.replayed"/>
			<Label fx:id="persistent" HBox.hgrow="ALWAYS" maxWidth="Infinity" text="%animation.tracereplay.alerts.traceReplayError.error.traceDiff.persistent"/>
			<Label fx:id="current" HBox.hgrow="ALWAYS" maxWidth="Infinity" text="%animation.tracereplay.alerts.traceReplayError.error.traceDiff.current"/>
		</HBox>
		<HBox spacing="5">
			<ListView fx:id="replayedList" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
			<ListView fx:id="persistentList" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
			<ListView fx:id="currentList" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
		</HBox>
		<HBox spacing="5">
			<Button fx:id="setReplayed" styleClass="button-dark2" HBox.hgrow="ALWAYS" maxWidth="Infinity" text="%animation.tracereplay.alerts.traceReplayError.error.traceDiff.setReplayed"/>
			<Button fx:id="showAlert" styleClass="button-dark2" HBox.hgrow="ALWAYS" maxWidth="Infinity" text="%animation.tracereplay.alerts.traceReplayError.error.traceDiff.showAlert"/>
			<Button fx:id="setCurrent" styleClass="button-dark2" HBox.hgrow="ALWAYS" maxWidth="Infinity" text="%animation.tracereplay.alerts.traceReplayError.error.traceDiff.setCurrent"/>
		</HBox>
	</children>
</fx:root>
