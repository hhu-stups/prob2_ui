<?xml version="1.0" encoding="UTF-8"?>

<?import de.prob2.ui.layout.FontSize?>
<?import de.prob2.ui.vomanager.VOEditingBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<fx:root type="VOEditingBox" styleClass="border" xmlns:fx="http://javafx.com/fxml/1">
	<fx:define>
		<FontSize fx:id="fontSize"/>
	</fx:define>
	<HBox styleClass="border">
		<padding>
			<Insets left="5.0"/>
		</padding>
		<Label fx:id="voTitleLabel" text="%vomanager.title.VO" styleClass="title" maxWidth="Infinity"/>
	</HBox>
	<VBox spacing="10.0">
		<padding>
			<Insets topRightBottomLeft="10.0"/>
		</padding>
		<HBox alignment="CENTER_LEFT" spacing="5.0">
			<Label text="%vomanager.edit.vo.linkRequirement"/>
			<ChoiceBox fx:id="cbLinkRequirementChoice"/>
		</HBox>
		<HBox alignment="CENTER_LEFT" spacing="5.0">
			<Label text="%vomanager.edit.vo.linkMachine"/>
			<ChoiceBox fx:id="cbVOLinkMachineChoice"/>
		</HBox>
		<HBox alignment="CENTER_LEFT" spacing="5.0">
			<Label text="%vomanager.edit.vo.name"/>
			<TextField fx:id="tfVOName" promptText="%common.optionalPlaceholder" prefWidth="250.0"/>
		</HBox>
		<HBox alignment="CENTER_LEFT" spacing="5.0">
			<Label text="%vomanager.edit.vo.expression"/>
			<ComboBox fx:id="cbVOExpression" editable="true"/>
		</HBox>
		<HBox spacing="5.0">
			<Button fx:id="applyVOButton" styleClass="button-blue" text="%common.buttons.add" onAction="#addVO"/>
			<Button fx:id="changeVOButton" styleClass="button-blue" text="%common.buttons.replace" onAction="#replaceVO"/>
			<Button fx:id="historyVOButton" styleClass="button-blue" text="%common.buttons.history" onAction="#historyVO"/>
			<Button fx:id="refineVOButton" styleClass="button-blue" text="%common.buttons.refine" onAction="#refineVO"/>
		</HBox>

		<TableView fx:id="vtTable">
			<columnResizePolicy>
				<TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
			</columnResizePolicy>
			<columns>
				<TableColumn fx:id="statusColumn" style="-fx-alignment: CENTER;" minWidth="${fontSize.fontSize * 4}" maxWidth="${fontSize.fontSize * 4}" text="%common.columns.status"/>
				<TableColumn fx:id="idColumn" minWidth="${fontSize.fontSize * 6}" maxWidth="${fontSize.fontSize * 6}" text="%verifications.common.columns.id"/>
				<TableColumn fx:id="configurationColumn" text="%common.columns.configuration"/>
			</columns>
		</TableView>
	</VBox>
</fx:root>
