<?xml version="1.0" encoding="UTF-8"?>

<?import de.prob2.ui.vomanager.VOEditingBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<fx:root type="VOEditingBox" styleClass="border" xmlns:fx="http://javafx.com/fxml/1">
	<HBox styleClass="border">
		<padding>
			<Insets left="5.0"/>
		</padding>
		<Label fx:id="voTitleLabel" text="%vomanager.title.VO" styleClass="title" maxWidth="Infinity"/>
	</HBox>
	<VBox spacing="10.0">
		<padding>
			<Insets topRightBottomLeft="10.0"/>
		</padding>
		<HBox alignment="CENTER_LEFT" spacing="5.0">
			<Label text="%vomanager.edit.vo.linkRequirement"/>
			<ChoiceBox fx:id="cbLinkRequirementChoice"/>
		</HBox>
		<HBox alignment="CENTER_LEFT" spacing="5.0">
			<Label text="%vomanager.edit.vo.linkMachine"/>
			<ChoiceBox fx:id="cbVOLinkMachineChoice"/>
		</HBox>
		<HBox alignment="CENTER_LEFT" spacing="5.0">
			<Label text="%vomanager.edit.vo.expression"/>
			<ComboBox fx:id="cbVOExpression" editable="true"/>
		</HBox>
		<HBox alignment="CENTER_LEFT" spacing="5.0">
			<Label text="%vomanager.edit.vo.name"/>
			<TextField fx:id="tfVOName" promptText="%common.optionalPlaceholder" prefWidth="250.0"/>
		</HBox>
		<Button fx:id="applyVOButton" styleClass="button-blue" text="%common.buttons.apply" onAction="#applyVO"/>
	</VBox>
</fx:root>
