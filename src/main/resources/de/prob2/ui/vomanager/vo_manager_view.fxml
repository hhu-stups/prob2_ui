<?xml version="1.0" encoding="UTF-8"?>

<?import de.prob2.ui.layout.FontSize?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Label?>

<?import de.prob2.ui.vomanager.VOManagerStage?>

<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Button?>
<?import de.prob2.ui.layout.BindableGlyph?>

<?import javafx.scene.control.TextField?>
<?import de.prob2.ui.vomanager.RequirementType?>

<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.layout.StackPane?>
<?import de.prob2.ui.vomanager.ValidationTaskType?>
<fx:root title="VO Manager" type="VOManagerStage" width="1200" height="800" minHeight="800" minWidth="1200" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
	<fx:define>
		<FontSize fx:id="fontSize" />
	</fx:define>
	<scene>
		<Scene stylesheets="@/prob.css">
			<ScrollPane prefWidth="1200" prefHeight="800" fitToHeight="true" fitToWidth="true">
				<SplitPane dividerPositions="0.35">
					<VBox styleClass="border" spacing="20.0" alignment="CENTER_LEFT">
						<VBox>
							<HBox styleClass="border">
								<padding>
									<Insets left="5.0"/>
								</padding>
								<Button fx:id="btAddOrCancelRequirement" contentDisplay="GRAPHIC_ONLY" onAction="#addOrCancelRequirement">
									<graphic>
										<BindableGlyph styleClass="icon-dark" fontFamily="FontAwesome" icon="PLUS_CIRCLE" bindableFontSize="${fontSize.fontSize + 2}" />
									</graphic>
								</Button>
							</HBox>
							<TreeTableView fx:id="tvRequirements">
								<columnResizePolicy>
									<TreeTableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
								</columnResizePolicy>
								<columns>
									<TreeTableColumn fx:id="requirementStatusColumn" style="-fx-alignment: CENTER;"
												 minWidth="${fontSize.fontSize * 6}"
												 maxWidth="${fontSize.fontSize * 6}" text="%common.columns.status"/>
									<TreeTableColumn fx:id="requirementNameColumn" style="-fx-alignment: CENTER;" minWidth="70.0" maxWidth="70.0"
												 text="Name"/>
									<TreeTableColumn fx:id="typeColumn" style="-fx-alignment: CENTER;" minWidth="90.0" maxWidth="90.0"
												 text="Type"/>
									<TreeTableColumn fx:id="specificationColumn" minWidth="120.0"
													 text="Specification"/>
								</columns>
								<placeholder>
									<Label text="No Requirements"/>
								</placeholder>
							</TreeTableView>
						</VBox>
						<VBox>
							<HBox styleClass="border">
								<padding>
									<Insets left="5.0"/>
								</padding>
								<Button fx:id="btAddVT" contentDisplay="GRAPHIC_ONLY" onAction="#addVT">
									<graphic>
										<BindableGlyph styleClass="icon-dark" fontFamily="FontAwesome" icon="PLUS_CIRCLE" bindableFontSize="${fontSize.fontSize + 2}" />
									</graphic>
								</Button>
							</HBox>
							<TableView fx:id="tvValidationTasks">
								<columnResizePolicy>
									<TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
								</columnResizePolicy>
								<columns>
									<TableColumn fx:id="vtStatusColumn" style="-fx-alignment: CENTER;"
												 minWidth="${fontSize.fontSize * 6}"
												 maxWidth="${fontSize.fontSize * 6}" text="%common.columns.status"/>
									<TableColumn fx:id="vtNameColumn" style="-fx-alignment: CENTER;" minWidth="140.0" maxWidth="140.0"
												 text="Name"/>
									<TableColumn fx:id="vtConfigurationColumn" minWidth="80.0"
												 text="Configuration"/>
								</columns>
								<placeholder>
									<Label text="No Validation Tasks"/>
								</placeholder>
							</TableView>
						</VBox>
					</VBox>
					<StackPane>
						<VBox fx:id="requirementEditingBox" spacing="20.0" styleClass="border" alignment="TOP_LEFT" VBox.vgrow="NEVER">
							<VBox>
								<Label text="Requirement Type:"/>
								<ChoiceBox fx:id="cbRequirementChoice">
									<items>
										<FXCollections fx:factory="observableArrayList">
											<RequirementType fx:value="FUNCTIONAL"/>
											<RequirementType fx:value="NON_FUNCTIONAL"/>
										</FXCollections>
									</items>
								</ChoiceBox>
							</VBox>
							<HBox>
								<Label text="Name:"/>
								<TextField fx:id="tfName" style="-fx-control-inner-background: #f8f8f8; -fx-border-color: -prob-aqua; -fx-border-width: 2;"/>
							</HBox>
							<VBox>
								<Label text="Requirement:"/>
								<TextArea fx:id="taRequirement" style="-fx-control-inner-background: #f8f8f8; -fx-border-color: -prob-aqua; -fx-border-width: 2;"/>
							</VBox>
							<Button fx:id="applyButton" styleClass="button-blue" text="%common.buttons.apply" onAction="#applyRequirement"/>
						</VBox>
						<VBox fx:id="voEditingBox" spacing="20.0" styleClass="border" alignment="TOP_LEFT" VBox.vgrow="NEVER">
							<HBox>
								<Label text="Name:"/>
								<TextField fx:id="tfVOName" style="-fx-control-inner-background: #f8f8f8; -fx-border-color: -prob-aqua; -fx-border-width: 2;"/>
							</HBox>
							<VBox>
								<Label text="VO Predicate:"/>
								<TextArea fx:id="taVOPredicate" style="-fx-control-inner-background: #f8f8f8; -fx-border-color: -prob-aqua; -fx-border-width: 2;"/>
							</VBox>
							<Button fx:id="applyVOButton" styleClass="button-blue" text="%common.buttons.apply" onAction="#applyVO"/>
						</VBox>
						<VBox fx:id="vtEditingBox" spacing="20.0" styleClass="border" alignment="TOP_LEFT" VBox.vgrow="NEVER">
							<HBox>
								<Label text="Name:"/>
								<TextField fx:id="tfVTName" style="-fx-control-inner-background: #f8f8f8; -fx-border-color: -prob-aqua; -fx-border-width: 2;"/>
							</HBox>
							<VBox>
								<Label text="Validation Task:"/>
								<ChoiceBox fx:id="cbValidationTaskChoice">
									<items>
										<FXCollections fx:factory="observableArrayList">
											<ValidationTaskType fx:value="MODEL_CHECKING"/>
											<ValidationTaskType fx:value="LTL_MODEL_CHECKING"/>
											<ValidationTaskType fx:value="SYMBOLIC_MODEL_CHECKING"/>
											<ValidationTaskType fx:value="TRACE_REPLAY"/>
											<ValidationTaskType fx:value="SIMULATION"/>
											<ValidationTaskType fx:value="PARALLEL"/>
											<ValidationTaskType fx:value="SEQUENTIAL"/>
										</FXCollections>
									</items>
								</ChoiceBox>
							</VBox>
							<Button fx:id="applyVTButton" styleClass="button-blue" text="%common.buttons.apply" onAction="#applyVT"/>
						</VBox>
					</StackPane>
				</SplitPane>
			</ScrollPane>
		</Scene>
	</scene>
</fx:root>

